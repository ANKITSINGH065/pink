---
  import NavAccordion from "../components/NavAccordion.astro";
  const foundations = [
  {
    title: 'Typography',
    pathname: '/foundations/typography/'
  }
]
const components = [
  {
    title: 'Avatar',
    pathname: '/components/avatar/'
  },
  {
    title: 'Button',
    pathname: '/components/button/'
  }
]
---
<aside>
  <nav>
    <ul>
      <li>       
        <a href="/" aria-current={Astro.canonicalURL.pathname === "/" ? 'page' : false}>
        Home
        </a>
      </li>
      <li>
      <NavAccordion title="Foundations" links={foundations} />
      </li>
      <li>
      <NavAccordion title="Components" links={components} />
      </li>
   </ul>
  </nav>
</aside>
