---
  import '@picocss/pico';
  import SideNav from './sideNav.astro';
---
<html  data-theme="light">
  <head>
    <!-- ... -->
  </head>
  <body>
      <div class="grid">
        <SideNav />
        <main>
          <slot />
        </main>
      </div>
  </body>
</html>

<style>
  body {
    height: 100vh;
    max-height: 100vh;
  }
  body div.grid {
    grid-template-columns: 20% auto;
  }

  body div.grid main {
    overflow: auto;
    max-height: 100vh;
  }

</style>

<script>
import css from "../styles/appwrite.css?raw"

const createPreviewElement = () => {
    customElements.define('katalog-preview',
        class extends HTMLElement {
            content = null;
            constructor() {
                super();
                this.content = this.innerHTML;
                this.innerHTML = '';

                const shadowRoot = this.attachShadow({ mode: 'open' });
                const preview = document.createElement('div');
                preview.innerHTML = `<style>${css.replaceAll('root', 'host')} </style>`;
                preview.innerHTML += this.content;
                preview.style = 'padding: 0.5rem; width: 100%; display: flex; gap: 1rem'
                preview.classList += 'katalog-element'


                shadowRoot.appendChild(preview);
            }
        }
    );
}
createPreviewElement();
</script>