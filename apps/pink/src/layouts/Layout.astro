---
import "../../../../packages/ui/dist/appwrite.css";
import "../../../../packages/icons/dist/icon.css";
import Header from "@components/layout/Header.astro";
import SideNav from "@components/layout/SideNav.astro";
import Footer from "@components/layout/Footer.astro";
import Breadcrumb from "@components/layout/Breadcrumb.astro";

interface Props {
  homepage?: boolean;
}
---

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@appwrite/PinkUI</title>
    <link rel="stylesheet" href="/prismjs.css" />
  </head>

  <body>
    <script is:inline>
      const theme = localStorage.getItem("theme") || "light";
      if (theme === "dark") {
        document.body.classList.remove("theme-light");
        document.body.classList.add("theme-dark");
      } else {
        document.body.classList.remove("theme-dark");
        document.body.classList.add("theme-light");
      }
    </script>

    <script src="/_pagefind/pagefind-ui.js" type="text/javascript"></script>
    <dialog id="search"></dialog>

    <main class="grid-with-side">
      <Header />
      <SideNav />
      <section class="main-content">
        {
          Astro.props.homepage ? (
            <slot />
          ) : (
            <div class="container">
              <div class={Astro.props.noCard ? "" : "card"}>
                <Breadcrumb />
                <slot />
              </div>
            </div>
          )
        }
      </section>
      <Footer />
    </main>

    <script>
      window.addEventListener("DOMContentLoaded", (event) => {
        new PagefindUI({ element: "#search" });
      });
    </script>

    <script is:inline>
      const searchModal = document.getElementById("search");

      searchModal?.addEventListener("click", (e) => {
        if (e.target === searchModal) {
          searchModal.removeAttribute("open");
        }
      });

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") {
          searchModal.removeAttribute("open");
        }
      });
    </script>
  </body>
</html>

<style is:global>
  pre {
    margin: 0;
  }

  body {
    --p-body-bg-color: var(--color-neutral-0);
    --search-bg-color: var(--color-neutral-0);
    --search-color: var(--color-neutral-100);
  }
  body.theme-dark {
    --p-body-bg-color: var(--color-neutral-300);
    --search-bg-color: var(--color-neutral-400);
    --search-color: var(--color-neutral-50);
  }

  .color-box li {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    width: 150px;
    height: 60px;
    border-radius: 4px;
    color: #fff;
  }

  #search {
    /*   font-family: 'Poppins', sans-serif; */
    position: fixed;
    z-index: 10000;
    background-color: rgba(0, 0, 0, 0.5);
    color: hsl(var(--search-color));
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  #search[data-open="false"] {
    display: none;
  }

  .pagefind-ui__form {
    border-radius: 4px;
    position: absolute;
    width: 500px;
    max-height: 500px;
    overflow: hidden;

    top: 50%;
    left: 50%;
    translate: -50% -350px;

    display: flex;
    flex-direction: column;
  }

  .pagefind-ui__search-input {
    border-radius: 0;
  }

  .pagefind-ui__drawer {
    overflow-y: scroll;
    max-height: 100%;
    flex-shrink: 1;

    background-color: hsl(var(--search-bg-color));
    /*   padding: 8px; */
  }

  .pagefind-ui__message {
    padding-inline: 12px;
  }

  .pagefind-ui__results-area {
    padding: 12px 16px;
  }

  .pagefind-ui__results {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 1rem 0;
  }

  .pagefind-ui__result {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: 16px;

    border-radius: 8px;
    position: relative;
    padding: 12px;
  }

  .pagefind-ui__result:hover {
    background-color: hsla(234, 20%, 19%, 0.1);
  }

  .pagefind-ui__result-thumb {
  }

  .pagefind-ui__result-image {
    width: 100%;
    object-fit: cover;
  }

  .pagefind-ui__result-inner {
  }

  .pagefind-ui__result-link {
    /* color: black; */
    font-size: 1rem;
    font-weight: bold;
  }

  .pagefind-ui__result-link::before {
    content: "";
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
    height: 100%;
  }
</style>
