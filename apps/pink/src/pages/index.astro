<Layout homepage>
  <div class="container hero-top-container">
    <div class="hero u-text-center">
      <section class="u-max-width-650 u-margin-inline-auto">
        <h1 class="eyebrow-heading-3 u-color-text-pink">Pink Design</h1>
        <h2 class="heading-level-1 u-margin-block-start-16">
          Build. Design. Collaborate.
        </h2>
        <p class="u-margin-block-start-16">
          Pink Design, or just Pink, is the Appwrite open-source design system
          for building consistent and reusable user interfaces. Pink is designed
          to prioritize collaboration, dev experience, and accessibility.
        </p>

        <ul class="hero-buttons u-flex u-gap-16 u-main-center">
          <li>
            <button class="button"
              ><span class="text">Get Started</span>
            </button>
          </li>
        </ul>
      </section>
      <HeroAnimation client:load />
    </div>
  </div>

  <div class="container">
    <ul
      class="drop-tabs is-large u-main-center u-margin-inline-auto u-margin-block-start-52"
      id="stickyTabs"
    >
      <li class="drop-tabs-item">
        <button class="drop-tabs-button">
          <span class="text">Design</span>
        </button>
      </li>
      <li class="drop-tabs-item">
