---
import Layout from "@layouts/Layout.astro";

---

<Layout homepage>
    <div class="u-padding-64">
        <div class="container hero">
            <div class="container u-max-width-650 u-text-center">
                <section>
                    <h1 class="heading-level-1">Build. Design. Collaborate.</h1>
                    <p>Pink Design, or just Pink, is the Appwrite open-source design system for building consistent and reusable user interfaces. Pink is designed to prioritize collaboration, dev experience, and accessibility.</p>

                    <ul class="u-flex u-gap-16 u-main-center u-margin-block-start-40">
                        <li>
                            <button class="button"><span class="text">Get Started</span></button>
                        </li>
                    </ul>
                </section>
            </div>
        </div>
    </div>

    <div class="container">

        <ul class="drop-tabs is-large u-main-center u-margin-block-start-52
                   u-position-sticky u-z-index-1" style="--inset-block-start:4rem">
            <li class="drop-tabs-item">
                <button class="drop-tabs-button">
                    <span class="text">Design</span>
                </button>
            </li>
            <li class="drop-tabs-item">
                <button class="drop-tabs-button" disabled>
                    <span class="text">Build</span>
                </button>
            </li>
            <li class="drop-tabs-item">
                <button class="drop-tabs-button">
                    <span class="text">Collaborate</span>
                </button>
            </li>
        </ul>

        <section class="grid-1-1 u-margin-block-start-200" id="design">
            <div class="grid-1-1-col-1 u-max-width-450">
                <h2 class="heading-level-4">Design</h2>
                <p class="u-margin-block-start-8">Design and create simple, consistent and user friendly features when contributing to Appwrite, or use our components for your own products</p>
                <ul class="list u-margin-block-start-32">
                    <li class="list-item">
                        <span class="icon-check" aria-hidden="true"></span>
                        <span class="text">Fully accessibile</span>
                    </li>
                    <li class="list-item">
                        <span class="icon-check" aria-hidden="true"></span>
                        <span class="text">Light and dark mode support</span>
                    </li>
                    <li class="list-item">
                        <span class="icon-check" aria-hidden="true"></span>
                        <span class="text">Optimized for Dev tooling</span>
                    </li>
                </ul>
            </div>
            <div class="grid-1-1-col-2">
                <div class="grid-1-1 u-gap-32">
                    <div class="u-grid u-gap-32">
                        <div class="drop u-width-fit-content u-main-end u-position-relative" style="z-index:0; inset:auto; justify-self:end;">
                            <section class="drop-section">
                                <ul class="drop-list">
                                    <li class="drop-list-item">
                                        <button class="drop-button">
                                            <span class="text">Create</span>
                                            <span class="icon-plus u-margin-inline-start-auto" aria-hidden="true"></span>
                                        </button>
                                    </li>
                                    <li class="drop-list-item">
                                        <button class="drop-button">
                                            <span class="text">Delete</span>
                                            <span class="icon-trash u-margin-inline-start-auto" aria-hidden="true"></span>
                                        </button>
                                    </li>
                                </ul>
                            </section>
                        </div>
                        <div class="u-flex u-main-end u-gap-16">
                            <div class="avatar" aria-label="user image">
                                <span class="icon-user" aria-hidden="true"></span>
                            </div>
                            <button class="button is-secondary"><span class="text">Secondary</span></button>
                            <button class="button"><span class="text">Primary</span></button>
                        </div>
                        <button class="card u-text-center">
                            <span class="avatar u-margin-inline-auto">
                                <span class="icon-plus" aria-hidden="true"></span>
                            </span>
                            <span class="u-block u-margin-block-start-24">Create a new object</span>
                        </button>
                    </div>
                    <div class="card" style="--card-padding:0.75rem; --card-border-radius:0;">
                        <section class="drop-section">
                            <ul class="drop-list">
                                <li class="drop-list-item">
                                    <a class="drop-button" href="/">
                                        <span class="icon-chart-bar" aria-hidden="true"></span>
                                        <span class="text">Overview</span>
                                    </a>
                                </li>
                                <li class="drop-list-item">
                                    <a class="drop-button" href="/">
                                        <span class="icon-user-group" aria-hidden="true"></span>
                                        <span class="text">Auth</span>
                                    </a>
                                </li>
                                <li class="drop-list-item">
                                    <a class="drop-button" href="">
                                        <span class="icon-database" aria-hidden="true"></span>
                                        <span class="text">Database</span>
                                    </a>
                                </li>
                                <li class="drop-list-item">
                                    <a class="drop-button" href="/">
                                        <span class="icon-lightning-bolt" aria-hidden="true"></span>
                                        <span class="text">Functions</span>
                                    </a>
                                </li>

                                <li class="drop-list-item">
                                    <a class="drop-button" href="/users.html">
                                        <span class="icon-folder" aria-hidden="true"></span>
                                        <span class="text">Storage</span>
                                    </a>
                                </li>
                            </ul>
                        </section>
                    </div>
                </div>
            </div>
        </section>

        <section class="grid-1-1 u-margin-block-start-300" id="build">
            <div class="grid-1-1-col-1">
                <h2 class="heading-level-4">Build</h2>
                <p class="u-margin-block-start-8">Design system created with developer experience in mind, with support of our internal developer team</p>
                <ul class="list u-margin-block-start-32">
                    <li class="list-item">
                        <span class="icon-check" aria-hidden="true"></span>
                        <span class="text">Easy to integrate with your preferred framework</span>
                    </li>
                    <li class="list-item">
                        <span class="icon-check" aria-hidden="true"></span>
                        <span class="text">Only one CSS file is needed</span>
                    </li>
                </ul>

                <ul class="u-flex u-gap-16 u-margin-block-start-32">
                    <li>
                        <button class="button is-secondary"><span class="text">Getting started guide</span></button>
                    </li>
                </ul>
            </div>
            <div class="grid-1-1-col-2">
            </div>
        </section>

        <section class="grid-1-1 u-margin-block-start-300" id="collaborate">
            <div class="grid-1-1-col-1">
                <h2 class="heading-level-4">Collaborate</h2>
                <p class="u-margin-block-start-8">One (open) source of truth for collaborating with others on Appwrite, or your own products</p>
                <ul class="list u-margin-block-start-32">
                    <li class="list-item">
                        <span class="icon-check" aria-hidden="true"></span>
                        <span class="text">Documentation and tips on usage of components</span>
                    </li>
                    <li class="list-item">
                        <span class="icon-check" aria-hidden="true"></span>
                        <span class="text">Fully open source</span>
                    </li>
                    <li class="list-item">
                        <span class="icon-check" aria-hidden="true"></span>
                        <span class="text">Collaborate with us in Discord and GitHub</span>
                    </li>
                </ul>
                <ul class="u-flex u-gap-16 u-margin-block-start-32">
                    <li>
                        <button class="button is-secondary">
                            <span class="icon-github" aria-hidden="true"></span>
                            <span class="text">GitHub</span>
                        </button>
                    </li>
                    <li>
                        <button class="button is-secondary">
                            <span class="icon-discord" aria-hidden="true"></span>
                            <span class="text">Discord</span>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="grid-1-1-col-2">
            </div>
        </section>

    </div>

    <div class="container">
        <section class="u-margin-block-start-100">
            <h2 class="heading-level-4">Articles</h2>
            <div class="articles">
                <ul class="articles-list">
                    <li>
                        <a href="">
                            <article class="articles-item">
                                <img class="articles-item-image">
                                <div class="articles-item-content">
                                    <header class="articles-item-header">
                                        <h3 class="body-text-1"><span class="text">Announcement</span></h3>
                                        <span class="read-time u-margin-inline-start-8">3 min read</span>
                                    </header>
                                    <p class="u-trim-3">
                                        After several months of hard work by our design an
                                        d engineering teams, we’re excited to announce and showcase the
                                    </p>
                                </div>
                            </article>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <article class="articles-item">
                                <img class="articles-item-image">
                                <div class="articles-item-content">
                                    <header class="articles-item-header">
                                        <h3 class="body-text-1"><span class="text">Announcement</span></h3>
                                        <span class="read-time u-margin-inline-start-8">3 min read</span>
                                    </header>
                                    <p class="u-trim-3">
                                        After several months of hard work by our design an
                                        d engineering teams, we’re excited to announce and showcase the
                                    </p>
                                </div>
                            </article>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <article class="articles-item">
                                <img class="articles-item-image">
                                <div class="articles-item-content">
                                    <header class="articles-item-header">
                                        <h3 class="body-text-1"><span class="text">Announcement</span></h3>
                                        <span class="read-time u-margin-inline-start-8">3 min read</span>
                                    </header>
                                    <p class="u-trim-3">
                                        After several months of hard work by our design an
                                        d engineering teams, we’re excited to announce and showcase the
                                    </p>
                                </div>
                            </article>
                        </a>
                    </li>
                </ul>
            </div>
        </section>

        <section class="u-text-center u-margin-block-start-100">
            <h2 class="heading-level-4">Join Our Growing Developer Community</h2>
            <p class="u-margin-block-start-8">Design and develop with us the best developer experience out there!</p>

            <ul class="avatars-group u-main-center u-margin-block-start-48">
                <li class="avatars-group-item">
                    <img class="avatar is-size-large u-drop-shadow-large" src="https://secure.gravatar.com/avatar/2e445033b9a319b860dc1b5c63d0f31a?s=250&amp;r=pg&amp;d=mm" alt="Elad Shechter">
                </li>
                <li class="avatars-group-item">
                    <img class="avatar is-size-large" src="https://secure.gravatar.com/avatar/2e445033b9a319b860dc1b5c63d0f31a?s=250&amp;r=pg&amp;d=mm" alt="Elad Shechter">
                </li>
                <li class="avatars-group-item">
                    <img class="avatar is-size-large" src="https://secure.gravatar.com/avatar/2e445033b9a319b860dc1b5c63d0f31a?s=250&amp;r=pg&amp;d=mm" alt="Elad Shechter">
                </li>
                <li class="avatars-group-item">
                    <img class="avatar is-size-large" src="https://secure.gravatar.com/avatar/2e445033b9a319b860dc1b5c63d0f31a?s=250&amp;r=pg&amp;d=mm" alt="Elad Shechter">
                </li>
                <li class="avatars-group-item">
                    <img class="avatar is-size-large" src="https://secure.gravatar.com/avatar/2e445033b9a319b860dc1b5c63d0f31a?s=250&amp;r=pg&amp;d=mm" alt="Elad Shechter">
                </li>
                <li class="avatars-group-item">
                    <img class="avatar is-size-large" src="https://secure.gravatar.com/avatar/2e445033b9a319b860dc1b5c63d0f31a?s=250&amp;r=pg&amp;d=mm" alt="Elad Shechter">
                </li>
                <li class="avatars-group-item">
                    <img class="avatar is-size-large" src="https://secure.gravatar.com/avatar/2e445033b9a319b860dc1b5c63d0f31a?s=250&amp;r=pg&amp;d=mm" alt="Elad Shechter">
                </li>
                <li class="avatars-group-item">
                    <img class="avatar is-size-large" src="https://secure.gravatar.com/avatar/2e445033b9a319b860dc1b5c63d0f31a?s=250&amp;r=pg&amp;d=mm" alt="Elad Shechter">
                </li>
                <li class="avatars-group-item">
                    <div class="avatar is-size-large u-small">+2500</div>
                </li>
            </ul>

            <ul class="u-flex u-gap-16 u-main-center u-margin-block-start-40">
                <li>
                    <button class="button is-secondary">
                        <span class="icon-github" aria-hidden="true"></span>
                        <span class="text">Join us on GitHub</span>
                    </button>
                </li>
                <li>
                    <button class="button is-secondary">
                        <span class="icon-discord" aria-hidden="true"></span>
                        <span class="text">Join us on Discord</span>
                    </button>
                </li>
            </ul>

        </section>
    </div>
</Layout homepage>

<style>
:root {
    --container-max-size: 76.25rem;
}
.drop-tabs {
    /* local styles */
    inline-size: fit-content;
    margin-inline: auto;
    padding: 1rem;
    border-radius: var(--border-radius-small);
    background-color: hsl(var(--p-body-bg-color));
    box-shadow: 0 0 1rem 0.5rem hsl(var(--p-body-bg-color));
}

.hero {
    background: linear-gradient(0deg, rgba(242, 242, 248, 0) -10.61%, rgba(242, 242, 248, 0.6) 100%);
    border-radius: 16px;
}

.theme-dark .hero {
    background: linear-gradient(0deg, rgba(40, 42, 59, 0) -10.61%, rgba(40, 42, 59, 0.6) 100%);
}

.read-time {
    --p-text-color: var(--color-neutral-70);
    color:hsl(var( --p-text-color));
}


.articles { margin-block-start:1.5rem; }
.articles-list { display:grid; grid-template-columns:repeat(auto-fill, minmax(22rem, 1fr)); gap:2rem; }
.articles-item {
    --p-article-item-bg-color: var(--color-neutral-0);

    background-color: hsl(var(--p-article-item-bg-color));
    border: solid 1px hsl(var(--color-border));
    border-radius: var(--border-radius-small);
    box-shadow: var(--shadow-small);
    overflow: hidden;
}
.articles-item-header { display:flex; flex-wrap:wrap; align-items:baseline; }
.read-time {}
.articles-item-image { display:block; inline-size:100%; aspect-ratio:16/9.5; }
.articles-item-content { padding:1.5rem; }


.SG-box-shadow-32 { box-shadow: 0px 16px 32px rgba(55, 59, 77, 0.02); }
</style>
