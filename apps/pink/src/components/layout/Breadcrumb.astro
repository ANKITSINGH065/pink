---
// Breadcrumbs aren't clickable because there are only two levels, e.g. Component / Button,
// and the first level doesn't have a page.
const path = Astro.url.pathname.slice(1).split("/");
---

{
  path.map((item, index) => (
    <span class="u-capitalize">
      {index > 0 && index < path.length ? " / " : ""}
      {item.replaceAll("-", " ")}
    </span>
  ))
}
